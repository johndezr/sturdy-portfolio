---
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';

type Post = {
  frontmatter: {
    title: string;
    pubDate: string;
    description: string;
    author: string;
    image: string;
    slug: string;
    tags: string[];
  };
};

const { post } = Astro.props as { post: Post };
const { title, description, image, slug, tags } = post.frontmatter;
---

<div
  class="max-w-sm rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-700 dark:bg-gray-800"
>
  <div class="flex flex-col gap-2 p-8">
    <h5 class="mb-2 text-xl font-bold tracking-tight dark:text-white">
      {title}
    </h5>
    <p class="text-muted-foreground mb-3 text-sm">
      {description}
    </p>
    <a href={`/posts/${slug}`}>
      <Button variant="secondary" class="w-full rounded-full font-bold"> Read more </Button>
    </a>
  </div>
</div>
